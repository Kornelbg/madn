<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff7356"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonPAGMainActivity"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@android:drawable/ic_menu_revert" />

        <Button
            android:id="@+id/buttoPAGnInfo"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="right"
            android:background="@android:drawable/ic_menu_info_details"
            android:gravity="right" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mainTitle2"
            android:textColor="#FAF8F8"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonGuest_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/spielErstellen" />

        <Button
            android:id="@+id/buttonGuest_multiplayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonGuest_multiplayer" />

    </LinearLayout>
</LinearLayout>